<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_items"
    android:padding="5dp">

    <ImageButton
        android:id="@+id/speakEn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:background="#00000000"
        app:srcCompat="@drawable/ic_baseline_volume_up_24" />
    <ImageButton
        android:id="@+id/speakExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="120dp"
        android:background="#00000000"
        app:srcCompat="@drawable/ic_baseline_volume_up_24" />

<!--    <ImageButton-->
<!--        android:id="@+id/speakEn"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentRight="true"-->
<!--        android:layout_marginTop="15dp"-->
<!--        android:background="#00000000"-->
<!--        app:srcCompat="@drawable/ic_baseline_volume_up_24" />-->

    <TextView
        android:id="@+id/textEn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/english"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/textHy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textEn"
        android:layout_marginTop="15dp"
        android:hint="@string/armenia"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#E3E3E3" />

    <TextView
        android:id="@+id/textEx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textHy"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/enVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textEx"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="italic" />

</RelativeLayout>
